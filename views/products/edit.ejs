<body class="solidBody">
    <%- include('../partials/nav') %>
    
    <div class="profileHeader">
       <h2>Edit Product Details</h2>
    </div>
    
    <div class="flex-container">
        <div class="card" style="width: 25rem;">
        <div class="card-body" id="profileItems">
            <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                <h5>Product Title: <span><input type="text" name="title" value="<%= product.title %>"></span></h5>
                <h5>Image Link: <span><input type="url" name="imageLink" value="<%= product.imageLink %>"></span></h5>
                <h5><span>Link: <input type="url" name="productLink" value="<%= product.productLink %>"></span></h5>
                <h5>Description: <span><input type="text" name="description" value="<%= product.description %>"></span></h5>
                <input type="submit" value="Update Product" class="btn btn-primary" id="editProduct">
            </form>
            <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-primary" id="editProduct">
            </form>
            </div>
        </div>
    </div>


